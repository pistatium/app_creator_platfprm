<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">false</item>
        <item name="android:actionBarStyle">@style/houkago_actionbar_style</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SplashTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="houkago_actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:titleTextStyle">@style/houkago_actionbar_titletextstyle</item>
    </style>
    <style name="houkago_actionbar_titletextstyle" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/item_bg</item>
    </style>
</resources>